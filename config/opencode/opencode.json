{
  "$schema": "https://opencode.ai/config.json",
  "theme": "one-dark",
  "plugin": ["@tarquinen/opencode-dcp@v2.0.2"],
  "agent": {
    "kanban-plan": {
      "description": "Plan the implementation of a feature or task and break it down into smaller tasks to be added to the kanban board"
    },
    "kanban-ticket": {
      "description": "Add a new ticket to the kanban board"
    },
    "plan": {
      "permission": {
        "bash": {
          "*": "ask",
          "ls *": "allow",
          "grep *": "allow",
          "find *": "allow",
          "mkdir *": "allow",
          "head *": "allow",
          "which *": "allow",
          "bundle *": "allow",
          "bin/rspec *": "allow",
          "bin/rails *": "allow",
          "bin/rubocop *": "allow"
        },
      }
    },
    "build": {
      "permission": {
        "bash": {
          "*": "ask",
          "ls *": "allow",
          "grep *": "allow",
          "find *": "allow",
          "mkdir *": "allow",
          "head *": "allow",
          "which *": "allow",
          "bundle *": "allow",
          "bin/rspec *": "allow",
          "bin/rails *": "allow",
          "bin/rubocop *": "allow"
        },
      }
    }
  },
  "permission": {
    "edit": "ask",
    "webfetch": "ask",
    "write": "ask",
    "patch": "ask",

    "question": "allow",
    "todowrite": "allow",
    "todoread": "allow",
    "skill": "allow",
    "grep": "allow",
    "glob": "allow",
    "list": "allow",

    "bash": {
      "*": "ask",
      "ls *": "allow",
      "grep *": "allow",
      "find *": "allow",
      "mkdir *": "allow",
      "which *": "allow",
      "bundle *": "allow",
      "bin/rspec *": "allow",
      "bin/rails *": "allow",
      "bin/rubocop *": "allow"
    },

    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    }
  }
}
