{
  "$schema": "https://opencode.ai/config.json",
  "theme": "one-dark",
  "disabled_providers": ["opencode"],
  "agent": {
    "build": {
      "prompt": "{file:./prompts/system.md}"
    },
    "plan": {
      "prompt": "{file:./prompts/system.md}"
    },
    "nudger": {
      "prompt": "{file:./prompts/system.md}"
    },
    "implementor": {
      "prompt": "{file:./prompts/system.md}"
    },
    "tester": {
      "prompt": "{file:./prompts/system.md}"
    }
  },
  "permission": {
    "webfetch": "ask",

    "edit": "allow",
    "question": "allow",
    "todowrite": "allow",
    "todoread": "allow",
    "skill": "allow",
    "grep": "allow",
    "glob": "allow",
    "list": "allow",

    "bash": {
      "*": "ask",
      "bin/rails *": "allow",
      "bin/rspec *": "allow",
      "bin/rubocop *": "allow",
      "bundle *": "allow",
      "echo *": "allow",
      "find *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "ls *": "allow",
      "mkdir *": "allow",
      "rails *": "allow",
      "rg *": "allow",
      "rspec *": "allow",
      "tail *": "allow",
      "which *": "allow",
      "xargs *": "allow"
    },

    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    }
  }
}
