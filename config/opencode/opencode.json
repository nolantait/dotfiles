{
  "$schema": "https://opencode.ai/config.json",
  "theme": "one-dark",
  "agent": {
    "kanban-plan": {
      "description": "Plan some shit"
    },
    "kanban-ticket": {
      "description": "Add a new ticket to the kanban board"
    }
  },
  "permission": {
    "edit": "ask",
    "webfetch": "ask",
    "write": "ask",
    "patch": "ask",

    "question": "allow",
    "todowrite": "allow",
    "todoread": "allow",
    "skill": "allow",
    "grep": "allow",
    "glob": "allow",
    "list": "allow",

    "bash": {
      "*": "ask",
      "ls *": "allow",
      "grep *": "allow",
      "find *": "allow",
      "mkdir *": "allow",
      "which *": "allow",
      "bundle *": "allow",
      "bin/rspec *": "allow",
      "bin/rails *": "allow",
      "bin/rubocop *": "allow"
    },

    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    }
  }
}
