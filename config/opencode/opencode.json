{
  "$schema": "https://opencode.ai/config.json",
  "theme": "one-dark",
  "permission": {
    "edit": "ask",
    "webfetch": "ask",
    "write": "ask",
    "patch": "ask",

    "question": "allow",
    "todowrite": "allow",
    "todoread": "allow",
    "skill": "allow",
    "grep": "allow",
    "glob": "allow",
    "list": "allow",

    "bash": {
      "*": "ask",
      "ls *": "allow",
      "grep *": "allow",
      "find *": "allow"
      "mkdir *": "allow",
      "which *": "allow"
    },

    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    }
  }
}
