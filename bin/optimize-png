#!/usr/bin/env bash
set -euo pipefail

# -----------------------------------------------------------------------------
# optimize-png.sh
#
# Resize and optimize PNG images for web delivery with sharp resampling,
# retina scaling, and optional WebP export.
#
# Usage:
#   ./optimize-png.sh input.png [--max-width N] [--max-height N]
#       [--retina 2] [--quality 80-100] [--webp]
#
# Notes:
#   - Requires: imagemagick, pngquant
#   - Resizes with Lanczos filter (sharpest for downscaling)
#   - Adds unsharp mask for clarity after resizing
#   - Converts to WebP if --webp flag is passed
# -----------------------------------------------------------------------------

if [[ $# -lt 1 ]]; then
  echo "Usage: $0 input.png [--max-width N] [--max-height N] [--retina 2] [--quality 80-100] [--webp]"
  exit 1
fi

INPUT_FILE="$1"
shift

# Default parameters
MAX_WIDTH=""
MAX_HEIGHT=""
RETINA_SCALE=1
QUALITY_RANGE="70-90"
EXPORT_WEBP=false

# Parse arguments
while [[ $# -gt 0 ]]; do
  case "$1" in
  --max-width)
    MAX_WIDTH="$2"
    shift 2
    ;;
  --max-height)
    MAX_HEIGHT="$2"
    shift 2
    ;;
  --retina)
    RETINA_SCALE="$2"
    shift 2
    ;;
  --quality)
    QUALITY_RANGE="$2"
    shift 2
    ;;
  --webp)
    EXPORT_WEBP=true
    shift
    ;;
  *)
    echo "Unknown argument: $1"
    exit 1
    ;;
  esac
done

# Check dependencies
for cmd in mogrify pngquant; do
  if ! command -v "$cmd" >/dev/null 2>&1; then
    echo "Error: $cmd is not installed or not in PATH"
    exit 1
  fi
done

# Handle dimensions - if neither is specified, use large values to maintain original size
# ImageMagick will maintain aspect ratio when only one dimension is specified
if [[ -z "$MAX_WIDTH" && -z "$MAX_HEIGHT" ]]; then
    # If neither is specified, we can set to very large values to effectively not resize
    # But this may not be what the user wants, so let's use some sensible maximums
    MAX_WIDTH=3840
    MAX_HEIGHT=2160
fi

# Compute target dimensions considering retina scaling
# Use very large values for unspecified dimensions to let ImageMagick maintain aspect ratio
if [[ -n "$MAX_WIDTH" ]]; then
    TARGET_WIDTH=$(awk "BEGIN {printf \"%d\", $MAX_WIDTH * $RETINA_SCALE}")
else
    TARGET_WIDTH=100000  # Very large number
fi

if [[ -n "$MAX_HEIGHT" ]]; then
    TARGET_HEIGHT=$(awk "BEGIN {printf \"%d\", $MAX_HEIGHT * $RETINA_SCALE}")
else
    TARGET_HEIGHT=100000  # Very large number
fi

# Create output filename
BASENAME=$(basename "$INPUT_FILE" .png)
DIRNAME=$(dirname "$INPUT_FILE")
OUTPUT_PNG="${DIRNAME}/${BASENAME}-processed.png"

# Copy the original to the processed file first
cp "$INPUT_FILE" "$OUTPUT_PNG"

# Resize with Lanczos filter (sharp downscaling) + mild unsharp mask
echo "üîß Resizing to max ${TARGET_WIDTH}x${TARGET_HEIGHT} (retina ${RETINA_SCALE}x)..."
mogrify -filter Lanczos -resize "${TARGET_WIDTH}x${TARGET_HEIGHT}>" -unsharp 0x0.75 "$OUTPUT_PNG"

# Quantize and compress PNG
echo "üé® Optimizing PNG colors and compression (quality=${QUALITY_RANGE})..."
# Use a temporary file for pngquant output
TEMP_FILE="${OUTPUT_PNG%.png}-temp.png"
pngquant --force --strip --quality="${QUALITY_RANGE}" --output "$TEMP_FILE" "$OUTPUT_PNG" && mv "$TEMP_FILE" "$OUTPUT_PNG"

# Optionally export to WebP (lossless)
if [[ "$EXPORT_WEBP" == true ]]; then
  WEBP_FILE="${DIRNAME}/${BASENAME}-processed.webp"
  echo "üåê Exporting to WebP: $WEBP_FILE"
  magick "$OUTPUT_PNG" -quality 90 -define webp:lossless=true "$WEBP_FILE"
fi

# Report final sizes
FINAL_SIZE=$(du -h "$OUTPUT_PNG" | cut -f1)
echo "‚úÖ Optimized PNG: $OUTPUT_PNG (${FINAL_SIZE})"

if [[ "$EXPORT_WEBP" == true ]]; then
  WEBP_SIZE=$(du -h "$WEBP_FILE" | cut -f1)
  echo "‚úÖ WebP version: $WEBP_FILE (${WEBP_SIZE})"
fi
